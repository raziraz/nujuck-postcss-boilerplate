<!-- index.njk -->
{% extends "layout.njk" %}

{% block content %}
  <h1>This is a postcss Nunjuck boilerplate!!!!!</h1>
  <!-- Adds the navigation partial -->
  {% import 'macros/nav-macro.njk' as nav %}
  <!-- Creating the navigation with activePage = 'home' -->
  {{nav.active('home')}}
  <!-- index.nunjucks -->
  <div class="gallery">
  <!-- Loops through "images" array -->
  {% for image in images %}
  <div class="gallery__item">
    <img src="{{image.src}}" alt="{{image.alt}}">
  </div>
  {% endfor %}
</div>
{% endblock %}
